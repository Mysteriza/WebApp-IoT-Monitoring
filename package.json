{
  "name": "iot-dashboard",
  "version": "1.0.0",
  "description": "A futuristic IoT dashboard for room monitoring",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "tailwindcss -i ./public/input.css -o ./public/tailwind.css --minify",
    "build:css": "tailwindcss -i ./public/input.css -o ./public/tailwind.css --minify",
    "watch:css": "tailwindcss -i ./public/input.css -o ./public/tailwind.css --watch"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "tailwindcss": "^3.4.10",
    "postcss": "^8.4.41",
    "autoprefixer": "^10.4.20"
  },
  "engines": {
    "node": "20.x"
  }
}